<%= form_with(model: @picture, url: confirm_pictures_path, local: true) do |form| %>
  <% if @picture.errors.any? %>
    <div id = "error_explnation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @picture.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
       </ul>
    </div>
  <% end %>

  <div class = "pic_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class = "pic_image">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <%= form.submit %>
<% end %>
